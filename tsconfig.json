{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["jest", "node"]
    },
    "include": ["src/**/*", "src/**/*.test.ts", "src/**/*.spec.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
